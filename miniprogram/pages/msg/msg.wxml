<!--miniprogram/pages/msg/msg.wxml-->
<view class='page'>
  <view class='weui-msg'>
    <view class='weui-msg__icon-area'>
      <view class='userinfo'>
        <image class='userinfo-avatar' src='{{avatarUrl}}'></image>
        <view class='userinfo-nickname'>{{nickName}}</view>
      </view>
    </view>
    <view class='weui-msg__text-area'>
      <view class='weui-msg__title'>{{title}}</view>
      <view class='weui-msg__desc'>{{content}}</view>
    </view>
    <view class='weui-msg__opr-area'>
      <view class='weui-btn-area' wx:if='{{isBeggar}}'>
        <button class='weui-btn' type='primary' bindtap='myTreat'>{{sayYes}}</button>
        <button class='weui-btn' type='default' open-type='share'>{{sayNo}}</button>
      </view>
    </view>
  </view>
</view>
