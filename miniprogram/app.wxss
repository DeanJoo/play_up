@import 'vendor/weui.wxss';
@import 'vendor/font/iconfont.wxss';

page{
    background-color: #F8F8F8;
    font-size: 20px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title button {
    display: inline;
    text-align: left;
    font-size: 26px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 18px;
}

.weui-form-preview__value {
    font-size: 18px
}

.weui-search-bar__search-btn {
  margin-left: 10px;
  line-height: 28px;
  color: #0bb20c;
  white-space: nowrap
}

.weui-toptips_info {
  background-color: #b2b2b2
}

.text-center {
  text-align: center;
}

.map-full {
  width: 100%;
  height: 200px;
}

.btn-select {
  padding-left: 0px;
  padding-right: 0px;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 80rpx;
  height: 80rpx;
  /* margin: 10rpx; */
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}